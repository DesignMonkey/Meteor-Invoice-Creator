template(name="frontpage")

  .container
    .row
      .col-md-12
        if $.Meteor.userId
          h1 Tilbuds Generator
          each invoices
            h3
              a(href="{{pathFor 'invoice' _id}}") {{name}}

          input#invoiceTitle.form-control(placeholder="Titel på nyt tilbud")
          button#addInvoice.btn.btn-success + Nyt tilbud

        else
          h1 Tilbuds Generator
          p Login eller opret bruger i højre hjørne




