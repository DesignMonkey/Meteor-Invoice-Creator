template(name="invoice")

  section.settings
    .container
      .row
        .col-md-12
          h1 Invoice: {{name}}
        +autoForm(collection="Invoices" trimStrings=false autosaveOnKeyup=true autosave=true doc=this id="updateInvoiceForm" type="update")
          .col-md-6
            +afQuickField(name='name')
          .col-md-3
            +afQuickField(name='rate')
          .col-md-3
            +afQuickField(name='managementPercent')

  section.header
    .container
      .row.header-row
        .col-md-5.th Beskrivelse
        .col-md-4.th Beregning
        .col-md-1.th.right Timer
        .col-md-2.th.right Pris

  section.invoice
    .container
      +headline(label="Opstart og indledning")
      +orderlines(label="preparation" invoiceId=_id parent=this)

      +headline(label="Dokumenttyper")
      +orderlines(label="doctypes" invoiceId=_id parent=this)

      +headline(label="Komponenter")
      +orderlines(label="components" invoiceId=_id parent=this)

      +headline(label="Funktionaliteter")
      +orderlines(label="functions" invoiceId=_id parent=this)

  section.total
    .container
      .row.totalprice
        .col-md-10.td Total
        .col-md-2.td.right {{ nicePrice getTotalPrice 1}}
      .row.vat
        .col-md-10.td Moms
        .col-md-2.td.right {{ nicePrice getTotalPrice 0.25}}
      .row.totalprice-vat
        .col-md-10.td Total
        .col-md-2.td.right {{ nicePrice getTotalPrice 1.25 }}


template(name="orderlines")
  .orderlines
    +each getOrderlines label invoiceId
      +autoForm(collection="Orderlines" trimStrings=false autosaveOnKeyup=true autosave=true doc=this id=this._id type="update")

        .row.orderline
          //.col-md-1.td
          //  +afQuickField(name='active' class='removeLabels')
          .col-md-5.td
            +afQuickField(name='head' class="head")
            +afQuickField(name='description' class="description")
          .col-md-4.td
            .calc-box
              +afQuickField(name='calc1.active' class='removeLabels')
              if calc1.active
                +afQuickField(name='calc1.label' class="calc-head")
                +afQuickField(name='calc1.min' class="calc-min")
                span.sep -
                +afQuickField(name='calc1.max' class="calc-max")
                span.hours timer
            .calc-box
              if calc1.active
                +afQuickField(name='calc2.active' class='removeLabels')
              if bothActive calc1.active calc2.active
                +afQuickField(name='calc2.label' class="calc-head")
                +afQuickField(name='calc2.min' class="calc-min")
                span.sep -
                +afQuickField(name='calc2.max' class="calc-max")
                span.hours timer
            .calc-box
              if bothActive calc1.active calc2.active
                +afQuickField(name='calc3.active' class='removeLabels')
              if allActive calc1.active calc2.active calc3.active
                +afQuickField(name='calc3.label' class="calc-head")
                +afQuickField(name='calc3.min' class="calc-min")
                span.sep -
                +afQuickField(name='calc3.max' class="calc-max")
                span.hours timer

          .col-md-1.td.right {{ niceQty calculatedHours }}

          .col-md-2.td.right {{ nicePrice calculatedHours }}

  .row
    .button-line
      button.addOrderline.btn.btn-success + Tilf√∏j ny linie


